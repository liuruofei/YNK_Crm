@{
    var KeyId = ViewBag.ID;
}

<form id="modelUserForm" lay-filter="modelUserForm" class="layui-form model-form">
    <input name="Id" type="hidden" value="@ViewBag.ID" />
    <div class="layui-form-item">
        <label class="layui-form-label">课程名称</label>
        <div class="layui-input-block">
            <input name="Work_Title" type="text" class="layui-input" disabled />
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">日期</label>
        <div class="layui-input-block">
            <input name="AT_Date" type="text" class="layui-input" disabled />
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">时间</label>
            <div class="inline-block">
                <input name="StartTime" type="text" class="layui-input" disabled style="width:60px" />
            </div>
            -
            <div class="inline-block">
                <input name="EndTime" type="text" class="layui-input" disabled style="width:60px" />
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">科目单元</label>
            <div class="layui-input-block">
                <select name="UnitId"></select>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">评语</label>
        <div class="layui-input-block">
            <textarea name="Comment" id="Comment" class="layui-textarea" placeholder="输入课程评语" style="height:360px"></textarea>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">课程作业</label>
        <div class="layui-input-block">
            <textarea name="CourseWork" id="CourseWork" class="layui-textarea" placeholder="输入课程评语" style="height:260px"></textarea>
        </div>
    </div>
    <div class="layui-form-item positionbottomtop"></div>
    <div class="layui-form-item text-right positionbottom">
        <button class="layui-btn layui-btn-primary" type="button" ew-event="closeDialog">取消</button>
        <button class="layui-btn" lay-filter="modelUserSubmit" lay-submit>保存点评</button>
        <button class="layui-btn" type="button" id="saveWork">保存作业并推送</button>
        <button class="layui-btn" type="button"  id="sendComment">推送点评(请先保存)</button>
    </div>
</form>

@section css{
    <style>
        .ke-container {
            margin-left: 33px !important;
        }

        .ke-edit, .ke-edit-iframe, .ke-edit-textarea {
            height: 266px !important;
        }
    </style>
}

@section js{
    <!-- js部分 -->
    <link href="~/kindeditor/themes/default/default.css" rel="stylesheet" />
    <script>
        layui.use(['form', 'admin', 'adminForm', 'laydate'], function () {
        var KeyId = '@KeyId';
        var $ = layui.jquery;
        var form = layui.form;
        var admin = layui.admin;
        var adminForm = layui.adminForm;
        var laydate = layui.laydate;

        var App = {
            Load: function () {
                adminForm.load({
                    formName: 'modelUserForm',
                    KeyId: '@KeyId',
                    url: "@Url.Action("Find")",
                    dataType: 'json',
                    callBack: function (r) {
                        if (r.WorkDate != null && r.WorkDate != undefined) {
                            $("input[name='AT_Date']").val(dateFtt("yyyy-MM-dd", r.AT_Date));
                        }
                        if (r.SubjectId != null && r.ProjectId != null) {
                            bindUnit(r.ProjectId,r.UnitId);
                        }
                        console.log(r);
                    }
                });
            },
            Save: function (data) {
                adminForm.Save({
                    url: '@Url.Action("SaveCommend")',
                    data: data.field,
                    callBack: function () {
                        admin.closeThisDialog();
                    }
                })
            }
        }
        App.Load();
        // 表单提交事件
        form.on('submit(modelUserSubmit)', function (data) {
            App.Save(data);
            return false;
        });
        //保存作业
       $("#saveWork").click(function () {
           var cwork = $("#CourseWork").val();
           if (cwork == null || cwork == '') {
               layer.msg("作业不能为空！");
               return false;
           }
            adminForm.Save({
                url: '@Url.Action("SaveWork")',
                data: { Id: $("input[name='Id']").val(),CourseWork: cwork},
                callBack: function (data) {
                    admin.closeThisDialog();
                }
             })
       });
        //手动推送点评
       $("#sendComment").click(function () {
           var comment = $("#Comment").val();
           if (comment == null || comment == '') {
               layer.msg("点评内容不能为空！");
               return false;
           }
            adminForm.Save({
                url: '@Url.Action("SendCourseComment")',
                data: { wkId: '@KeyId'},
                callBack: function (data) {

                }
             })
        });
        function formatMinutin() {
            $(".laydate-time-list li ol").eq(2).parent("li").remove();
        }
        });
        function bindUnit(projectId, defaulUnitId) {
            layui.use(['adminForm'], function () {
               var adminForm = layui.adminForm;
               adminForm.load({
                url: "@Url.Action("QueryUnit","CourseWork")",
                data: { projectId: projectId},
                dataType: 'json',
                callBack: function (rou) {
                    if (rou.data != null) {
                        $("select[name='UnitId']").html("");
                        var result = rou.data;
                        for (var i = 0; i < result.length; i++) {
                            if (defaulUnitId != undefined && defaulUnitId != null && defaulUnitId > 0 && defaulUnitId == result[i].UnitId) {
                                $("select[name='UnitId']").append('<option value = ' + result[i].UnitId + ' selected>' + result[i].UnitName + '</option>');
                            }
                            else {
                                $("select[name='UnitId']").append('<option value = ' + result[i].UnitId + '>' + result[i].UnitName + '</option>');
                            }
                        }
                    }
                }
              });
            });
        }
        function dateFtt(fmt, val) { //author: meizz
            var date = new Date(val);
            var o = {
                "M+": date.getMonth() + 1,     //月份
                "d+": date.getDate(),     //日
                "h+": date.getHours(),     //小时
                "m+": date.getMinutes(),     //分
                "s+": date.getSeconds(),     //秒
                "q+": Math.floor((date.getMonth() + 3) / 3), //季度
                "S": date.getMilliseconds()    //毫秒
            };
            if (/(y+)/.test(fmt))
                fmt = fmt.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
            for (var k in o)
                if (new RegExp("(" + k + ")").test(fmt))
                    fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
            return fmt;
        }
    </script>
}