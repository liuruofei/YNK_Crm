<!-- 正文开始 -->
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-body">
            <div class="layui-form toolbar">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">关键字：</label>
                        <div class="layui-input-inline mr0">
                            <input id="txtTitle" class="layui-input" type="text" placeholder="学生姓名，班级，教师" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">开始时间</label>
                        <div class="layui-input-inline mr0">
                            <input name="StartTime" id="StartTime" class="layui-input" type="text" placeholder="登记开始时间" autocomplete="off" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">—</label>
                        <div class="layui-input-inline mr0">
                            <input name="EndTime" id="EndTime" class="layui-input" type="text" placeholder="登记截止时间" autocomplete="off" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <button id="btnSearch" class="layui-btn icon-btn"><i class="layui-icon">&#xe615;</i>搜索</button>
                    </div>
                </div>
            </div>

            <table class="layui-table" id="userTable" lay-filter="userTable"></table>
        </div>
    </div>
</div>

<!-- 表格操作列 -->
<script type="text/html" id="tableBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" data-power="Edit" lay-event="edit">选择教室</a>
</script>

@section css{
    <link rel="stylesheet" href="/assets/module/formSelects/formSelects-v4.css" />
    <style>
        .layui-table-cell {
            height: auto;
            line-height: 28px;
        }

        .layui-table img {
            max-width: 600px;
        }
    </style>
}
@section js{
    <!-- js部分 -->
    <script>
    layui.use(['form','util','admin','adminList','laydate'], function () {
    var $ = layui.jquery;
    var util = layui.util;
    var admin = layui.admin;
    var adminList = layui.adminList;
    var laydate = layui.laydate;
    laydate.render({
        elem: '#StartTime',
        type: 'date'
    });
    laydate.render({
        elem: '#EndTime',
        type: 'date'
    });

    // 渲染表格
    var insTb = adminList.tableLayUI({
        elem: '#userTable',
        url: '@Url.Action("QueryWorkSource")',
        page: true,
        where: {
            startStr: $("input[name='StartTime']").val(), endStr: $("input[name='EndTime']").val(), userName: $("#txtTitle").val(),
        },
        cellMinWidth: 100,
        cols: [[
            { type: 'numbers' },
            { field: 'Work_Title', title: '上课科目',  width: 400  },
            {
                field: 'RoomName', title: '教室',sort:true,width: 220},
            {
                field: 'AT_Date', title: '上课日期',width: 120,sort:true, templet: function (d) {
                    return dateFtt("yyyy-MM-dd", d.AT_Date);
                }
            },
            {
                field: 'StartTime', title: '时间段',  width: 120,sort:true,templet: function (d) {
                    return d.StartTime + " - " + d.EndTime;
                }
            },
            { field: 'TeacherName', title: '教师', sort: true,width: 120 },
            { align: 'center', toolbar: '#tableBar', title: '操作'}
        ]],
    });


    // 搜索
    $('#btnSearch').click(function () {
        insTb.reload({
            where: {
                startStr: $("input[name='StartTime']").val(), endStr: $("input[name='EndTime']").val(), userName: $("#txtTitle").val()
            }
        });
    });

    // 工具条点击事件
    adminList.table.on('tool(userTable)', function (obj) {
        var data = obj.data;
        var layEvent = obj.event;
        if (layEvent === 'edit') { // 修改
            showEditModel(data);
        }
    });
    //显示表单弹窗
    function showEditModel(vmodel) {
        adminList.form({
            title:'更改教室',
            type: 2,
            width: "660px",
            height: "630px",
            content:'@Url.Action("Add")?ID=' + vmodel.Id ,
            end: function () {
                insTb.reload();
            }
        });
    }

    });

    function dateFtt(fmt, val) { //author: meizz
            var date = new Date(val);
            var o = {
                "M+": date.getMonth() + 1,     //月份
                "d+": date.getDate(),     //日
                "h+": date.getHours(),     //小时
                "m+": date.getMinutes(),     //分
                "s+": date.getSeconds(),     //秒
                "q+": Math.floor((date.getMonth() + 3) / 3), //季度
                "S": date.getMilliseconds()    //毫秒
            };
            if (/(y+)/.test(fmt))
                fmt = fmt.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
            for (var k in o)
                if (new RegExp("(" + k + ")").test(fmt))
                    fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
            return fmt;
        }
    </script>
}