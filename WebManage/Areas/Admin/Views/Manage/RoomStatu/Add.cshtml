@model C_Course_Work
@{
    var KeyId = ViewBag.ID;
}
<form id="modelUserForm" lay-filter="modelUserForm" class="layui-form model-form">
    <input name="Id" type="hidden" value="@ViewBag.ID" />
    <div class="layui-form-item">
        <label class="layui-form-label">课程名称</label>
        <div class="layui-input-block" style="line-height:36px;">
           <span>@Model.Work_Title</span>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" id="lineSpanDate">上课日期</label>
        <div class="layui-input-block" style="line-height:36px;">
            <span id="spanDate">@Model.AT_Date.ToString("yyyy-MM-dd")</span>
        </div>
        <div id="date_all"></div>
    </div>
    <div class="layui-form-item" >
        <div class="layui-inline">
            <label class="layui-form-label">时间</label>
            <div class="layui-input-inline" style="line-height:36px;">
                <span>@Model.StartTime</span>- <span>@Model.EndTime</span>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">教室</label>
        <div class="layui-input-block">
            <select name="RoomId"></select>
        </div>
    </div>
    <div class="layui-form-item positionbottomtop"></div>
    <div class="layui-form-item text-right positionbottom">
        <button class="layui-btn layui-btn-primary" type="button" ew-event="closeDialog">取消</button>
        <button class="layui-btn" lay-filter="modelUserSubmit" lay-submit>保存</button>
    </div>
</form>

@section css{
    <style>

    </style>
}

@section js{
    <!-- js部分 -->
    <link href="~/kindeditor/themes/default/default.css" rel="stylesheet" />
    <script>
    layui.use([ 'form', 'admin', 'adminForm'], function () {
        var KeyId = '@KeyId';
        var $ = layui.jquery;
        var form = layui.form;
        var admin = layui.admin;
        var adminForm = layui.adminForm;

        var App = {
            Load: function () {
                adminForm.load({
                    formName: 'modelUserForm',
                    KeyId: '@KeyId',
                    url: "@Url.Action("Find")",
                    dataType: 'json',
                    callBack: function (r) {
                        bindRoom(dateFtt("yyyy-MM-dd", r.AT_Date),r.StartTime,r.EndTime,r.RoomId);
                    }
                });
            },
            Save: function (data) {
                adminForm.Save({
                    url: KeyId ? '@Url.Action("SaveInfo")' : '@Url.Action("SaveInfo")',
                    data: data.field,
                    callBack: function () {
                        admin.closeThisDialog();
                    }
                })
            }
        }
        App.Load();
        // 表单提交事件
        form.on('submit(modelUserSubmit)', function (data) {
            App.Save(data);
            return false;
        });
    });
 function bindRoom(atDate, stTime, edTime, defaultRoomId) {
            layui.use(['adminForm'], function () {
                    var adminForm = layui.adminForm;
                    //绑定教室
                    adminForm.load({
                        url: "@Url.Action("QueryRoom", "CourseWork")",
                        data: { atDate: atDate, stTime: stTime, edTime: edTime, defaultRoomId:defaultRoomId},
                        dataType: 'json',
                        callBack: function (rou) {
                            $("select[name='RoomId']").html("");
                            if (rou.data != null) {
                                var result = rou.data;
                                for (var i = 0; i < result.length; i++) {
                                    if (defaultRoomId != undefined && defaultRoomId != null && defaultRoomId== result[i].Id) {
                                        $("select[name='RoomId']").append('<option value = ' + result[i].Id + ' selected>' + result[i].RoomName +'</option>');

                                    } else {
                                        $("select[name='RoomId']").append('<option value = ' + result[i].Id + '>' + result[i].RoomName + '</option>');
                                    }
                                }
                            }
                        }
                        });
            });
        }
        function dateFtt(fmt, val) { //author: meizz
            var date = new Date(val);
            var o = {
                "M+": date.getMonth() + 1,     //月份
                "d+": date.getDate(),     //日
                "h+": date.getHours(),     //小时
                "m+": date.getMinutes(),     //分
                "s+": date.getSeconds(),     //秒
                "q+": Math.floor((date.getMonth() + 3) / 3), //季度
                "S": date.getMilliseconds()    //毫秒
            };
            if (/(y+)/.test(fmt))
                fmt = fmt.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
            for (var k in o)
                if (new RegExp("(" + k + ")").test(fmt))
                    fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
            return fmt;
        }
    </script>
}