@{
    var KeyId = ViewBag.ID;
}

<form id="modelUserForm" lay-filter="modelUserForm" class="layui-form model-form">
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">科目分类</label>
            <div class="layui-input-inline">
                <select name="SubjectId" lay-filter="SubjectId"></select>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">科目</label>
            <div class="layui-input-inline">
                <select name="ProjectId" lay-filter="ProjectId"></select>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">单元</label>
            <div class="layui-input-inline">
                <select name="UnitId" lay-filter="UnitId"></select>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 50px;">
            <legend>考试日</legend>
        </fieldset>
        <div style="padding:9px 16px">
            <button type="button" class="btn btn-primary btn-lg" id="btnAddProject">
                添加考试日
            </button>
            <table class="layui-table">
                <thead>
                    <tr>
                        <th>考试类型</th>
                        <th>考试季</th>
                        <th>考试日期</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="child_UnitTime">
                </tbody>
            </table>
        </div>
    </div>
    <div class="layui-form-item positionbottomtop"></div>
    <div class="layui-form-item text-right positionbottom">
        <button class="layui-btn layui-btn-primary" type="button" ew-event="closeDialog">取消</button>
        <button class="layui-btn" lay-filter="modelUserSubmit" lay-submit>保存</button>
    </div>
</form>

@section css{
    <style>
        .ke-container {
            margin-left: 33px !important;
        }

        .ke-edit, .ke-edit-iframe, .ke-edit-textarea {
            height: 266px !important;
        }
    </style>
}

@section js{
    <!-- js部分 -->
    <link href="~/kindeditor/themes/default/default.css" rel="stylesheet" />
    <script type="text/html" id="templateChild">
        {{each data item index}}
        <tr>
            <td><input name="Unit_TimeType" value="{{item.Unit_TimeType}}" /></td>
            <td><input name="Unit_TimeName" value="{{item.Unit_TimeName}}" /></td>
            <td><input name="At_Date" value="{{item.At_Date}}" /></td>
            <td>
                <input type="hidden" name="Id" value="{{item.Id}}" />
                <button type="button" onclick="remove(this)">删除</button>
            </td>
        </tr>
        {{/each}}
    </script>
    <script type="text/html" id="templateAdd">
        <tr>
            <td><input name="Unit_TimeType" /></td>
            <td><input name="Unit_TimeName" /></td>
            <td><input name="At_Date"/></td>
            <td>
                <input type="hidden" name="Id" value="0" />
                <button type="button" onclick="remove(this)">删除</button>
            </td>
        </tr>
    </script>
    <script>
    layui.use([ 'form', 'admin', 'adminForm'], function () {
        var KeyId = '@KeyId';
        var $ = layui.jquery;
        var form = layui.form;
        var admin = layui.admin;
        var adminForm = layui.adminForm;

        var App = {
            Load: function () {
                adminForm.load({
                    formName: 'modelUserForm',
                    KeyId: '@KeyId',
                    url: "@Url.Action("Find")",
                    dataType: 'json',
                    callBack: function (r) {
                        if (r.UnitTimeList != undefined && r.UnitTimeList != null) {
                            var html = template("templateChild", { data: r.UnitTimeList});
                            document.getElementById("child_UnitTime").innerHTML = html;
                        }
                        adminForm.load({
                        url: "@Url.Action("QuerySubject","ContracUser")",
                        dataType: 'json',
                        callBack: function (rou) {
                            if (rou.data != null) {
                                var result = rou.data;
                                for (var i = 0; i < result.length; i++) {
                                    if (r != undefined && r.SubjectId != null && r.SubjectId == result[i].SubjectId) {
                                        $("select[name='SubjectId']").append('<option value = ' + result[i].SubjectId + ' selected>' + result[i].SubjectName +'</option>');
                                        bindProject(r.SubjectId, r.ProjectId, r.UnitId);
                                    } else {
                                        $("select[name='SubjectId']").append('<option value = ' + result[i].SubjectId + '>' + result[i].SubjectName + '</option>');
                                        if (i == 0) {
                                            bindProject(result[i].SubjectId,null,null);
                                        }
                                    }
                                }
                            }
                        }
                        });
                    }
                });
            },
            Save: function (data) {
                data.field.UnitTimeList = [];
                $("#child_UnitTime>tr").each(function (i, ite) {
                    var td = $(ite).find("td");
                    var Id = td.find("input[name='Id']").val();
                    var Unit_TimeType = td.find("input[name='Unit_TimeType']").val();
                    var Unit_TimeName = td.find("input[name='Unit_TimeName']").val();
                    var At_Date = td.find("input[name='At_Date']").val();
                    data.field.UnitTimeList.push({ Id: Id, Unit_TimeType: Unit_TimeType, Unit_TimeName: Unit_TimeName, At_Date:At_Date});
                });
                if (data.field.UnitTimeList.length < 1) {
                    console.log(data.field.UnitTimeList);
                    layer.msg("请添加考试日");
                    return false;
                }
                adminForm.Save({
                    url: KeyId ? '@Url.Action("SaveInfo")' : '@Url.Action("SaveInfo")',
                    data: data.field,
                    callBack: function () {
                        admin.closeThisDialog();
                    }
                })
            }
        }
        App.Load();
        form.on('select(SubjectId)', function (data) {
            var subjectId = data.value;
            if (subjectId > 0) {
                document.getElementById("child_UnitTime").innerHTML = "";
                bindProject(subjectId);
            }
        });
        form.on('select(ProjectId)', function (data) {
            var projectId = data.value;
            if (projectId > 0) {
                document.getElementById("child_UnitTime").innerHTML = "";
                bindUnit(projectId);
            }
        });
        form.on('select(UnitId)', function (data) {
            var unitId = data.value;
            if (unitId > 0) {
                document.getElementById("child_UnitTime").innerHTML = "";
                adminForm.load({
                url: "@Url.Action("GetTimeByUnitId")",
                data: { unitId: unitId },
                dataType: 'json',
                callBack: function (rou) {
                    if (rou.data != null) {
                        var result = rou.data;
                        var html = template("templateChild", { data:result});
                        document.getElementById("child_UnitTime").innerHTML = html;
                    }
                  }
                });
            }
        });
        // 表单提交事件
        form.on('submit(modelUserSubmit)', function (data) {
            App.Save(data);
            return false;
        });

        $("#btnAddProject").click(function () {
            $("#child_UnitTime").append($("#templateAdd").html());
        })
    });
        function remove(obj) {
            var timeId = $(obj).parents("tr").find("td").find("input[name='Id']").val();
            if (timeId < 1) {
                $(obj).parents("tr").remove();
            }
            else {
                layui.use(['adminForm'], function () {
                    var adminForm = layui.adminForm;
                    adminForm.Save({
                    url: '@Url.Action("Delete")',
                    data: { Id: timeId},
                    callBack: function (result) {
                        if (result.code == 200) {
                            layer.msg(result.msg);
                            $(obj).parents("tr").remove();
                        }
                    }
                })

                });
            }
        }
        function bindProject(subjectId, defaultProjectId,defulatUnitId) {
            layui.use(['adminForm'], function () {
                var adminForm = layui.adminForm;
               adminForm.load({
                url: "@Url.Action("QueryProject")",
                data: { subjectId: subjectId},
                dataType: 'json',
                callBack: function (rou) {
                    if (rou.data != null) {
                        $("select[name='ProjectId']").html("");
                        var result = rou.data;
                        for (var i = 0; i < result.length; i++) {
                            if (defaultProjectId != undefined && defaultProjectId != null && defaultProjectId > 0 && defaultProjectId == result[i].ProjectId) {
                                $("select[name='ProjectId']").append('<option value = ' + result[i].ProjectId + ' selected>' + result[i].ProjectName + '</option>');
                                if (defulatUnitId != null && defulatUnitId != undefined) {
                                    bindUnit(defaultProjectId, defulatUnitId);
                                }
                            }
                            else {
                                $("select[name='ProjectId']").append('<option value = ' + result[i].ProjectId + '>' + result[i].ProjectName + '</option>');
                                if (i == 0) {
                                    bindUnit(result[i].ProjectId);
                                }
                            }
                        }
                    }
                }
              });
            });
        }

        function bindUnit(projectId, defaultUnitId) {
             layui.use(['adminForm'], function () {
              var adminForm = layui.adminForm;
               adminForm.load({
                url: "@Url.Action("QueryUnit")",
                data: { projetId: projectId},
                dataType: 'json',
                callBack: function (rou) {
                    if (rou.data != null) {
                        $("select[name='UnitId']").html("");
                        var result = rou.data;
                        for (var i = 0; i < result.length; i++) {
                            if (defaultUnitId != undefined && defaultUnitId != null && defaultUnitId > 0 && defaultUnitId == result[i].UnitId) {
                                $("select[name='UnitId']").append('<option value = ' + result[i].UnitId + ' selected>' + result[i].UnitName + '</option>');
                            }
                            else {
                                $("select[name='UnitId']").append('<option value = ' + result[i].UnitId + '>' + result[i].UnitName + '</option>');
                            }
                        }
                    }
                }
              });
            });
        }

    </script>
}