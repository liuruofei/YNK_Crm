<!-- 正文开始 -->
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-body">
            <div class="layui-form toolbar">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">学员：</label>
                        <div class="layui-input-inline mr0">
                            <input id="txtTitle" class="layui-input" type="text" placeholder="学员名称" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">时间</label>
                        <div class="layui-input-inline mr0">
                            <input name="StartTime" id="StartTime" class="layui-input" type="text" placeholder="登记开始时间" autocomplete="off" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">-</label>
                        <div class="layui-input-inline mr0">
                            <input name="EndTime" id="EndTime" class="layui-input" type="text" placeholder="登记截止时间" autocomplete="off" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <input type="checkbox" title="只显示垫付" id="ArrearageStatus"  value="1"/>
                    </div>
                    <div class="layui-inline">
                        <button id="btnSearch" class="layui-btn icon-btn"><i class="layui-icon">&#xe615;</i>搜索</button>
                    </div>
                    <div class="layui-inline">
                        <button id="btnAdd" class="layui-btn icon-btn" data-power="Add"><i class="layui-icon">&#xe654;</i>添加</button>
                    </div>
                    <div class="layui-inline">
                        <span id="txtAmountTotal" style="font-weight:700"></span>
                    </div>
                    <div class="layui-inline">
                        <span id="txtBackAmount" style="font-weight:700"></span>
                    </div>
                </div>
            </div>

            <table class="layui-table" id="userTable" lay-filter="userTable"></table>
        </div>
    </div>
</div>

<!-- 表格操作列 -->
<script type="text/html" id="tableBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" data-power="Edit" lay-event="edit">修改</a>
    {{# if(d.PayStatus==0){ }}
    <a class="layui-btn layui-btn-primary layui-btn-xs" data-power="Audit" lay-event="config">确认收款</a>
    <a class="layui-btn layui-btn-primary layui-btn-xs" data-power="Audit" lay-event="reject">驳回收款</a>
    {{#}}}
    {{# if(d.PayStatus==1&&d.ArrearageStatus==1){ }}
    <a class="layui-btn layui-btn-primary layui-btn-xs" data-power="Audit" lay-event="payment">点击还款</a>
    {{#}}}
    <a class="layui-btn layui-btn-danger layui-btn-xs" data-power="Delete" lay-event="del">删除</a>
</script>

@section css{
    <link rel="stylesheet" href="/assets/module/formSelects/formSelects-v4.css" />
    <style>
        .layui-table-cell {
            height: auto;
            line-height: 28px;
        }

        .layui-table img {
            max-width: 600px;
        }

    </style>
}
@section js{
    <!-- js部分 -->
    <script>
        layui.use(['form', 'util', 'admin', 'adminList', 'adminForm','laydate'], function () {
    var $ = layui.jquery;
    var util = layui.util;
    var admin = layui.admin;
    var adminList = layui.adminList;
    var adminForm = layui.adminForm;
    var laydate = layui.laydate;
    laydate.render({
        elem: '#StartTime',
        type: 'date'
    });
    laydate.render({
        elem: '#EndTime',
        type: 'date'
    });
    // 渲染表格
    var insTb = adminList.tableLayUI({
        elem: '#userTable',
        url: '@Url.Action("GetDataSource")',
        page: true,
        cellMinWidth: 100,
        cols: [[
            { type: 'numbers' },
            { field: 'StudentName', title: '学员', fixed: 'left', sort: true },
            {
                field: 'FilAmount', title: '收款金额', sort: true, templet: function (d) {
                    return (d.FilAmount < 0 ? 0 : d.FilAmount);
                }
            },
            { field: 'AddedAmount', title: '额外优惠', sort: true },
            { field: 'koudeductAmount', title: '扣除余额', sort: true },
            {
                field: 'PayMothed', title: '支付模式', sort: true, templet: function (d) {
                    console.log(d.Amount, d.AddedAmount, d.DeductAmount);
                    if (d.FilAmount > 0 && (d.RelationShip_Contras == '' || d.RelationShip_Contras==null))
                        return "普通收款(充值余额)";
                    if (d.FilAmount > 0 &&d.RelationShip_Contras!='')
                        return "普通收款";
                    if (d.AddedAmount > 0 && d.FilAmount<1)
                        return "使用额外优惠";
                    if (d.DeductAmount > 0 && d.AddedAmount < 1 && d.FilAmount < 1)
                        return "使用余额";
                }
            },
            { field: 'RelationShip_Contras', title: '关联合同', width: 120, sort: true },
            { field: 'Collection_Time', title: '收款日期', width: 120, sort: true },
            {
                field: 'ArrearageStatus', title: '垫付状态', width: 111, templet: function (d) {
                    return (d.ArrearageStatus > 0 ? "是" : (d.RepaymentTotal > 0 && d.Amount == d.RepaymentTotal?"不是(已还款)":"不是"))
                }
            },
            {
                field: 'RepaymentTotal', title: '垫付金额', sort: true, width: 150,templet: function (d) {
                    return (d.ArrearageStatus > 0 ? d.Amount + "(已还款" + d.RepaymentTotal + ")" : d.RepaymentTotal);
                }
            },
            { field: 'User_Name', title: '创建人', sort: true },
            {
                field: 'PayStatus', title: '状态', sort: true, width: 120, templet: function (d) {
                    if (d.PayStatus == 0) {
                        return "待确认";
                    }
                   else  if (d.PayStatus ==1) {
                        return "已确认";
                    }
                   else if (d.PayStatus == 2) {
                        return "已驳回";
                    }
                }
            },
            { field: 'CampusName', title: '校区', sort: true },
            { align: 'center', toolbar: '#tableBar', fixed: 'right', title: '操作', width: 300}
        ]],
        done: function (res, curr, count) {
            res.data.forEach(function (item, index) {
                if (item.ArrearageStatus==1) {
                    $(".layui-table").find("tr[data-index='" + index + "']").css("background-color", "rgb(231 195 195)");
                }
            });
        }
    });
    AmountTotal();
    // 添加
    $('#btnAdd').click(function () {
        showEditModel();
    });

    // 搜索
    $('#btnSearch').click(function () {
        var title = $('#txtTitle').val();
        var startTime = $('input[name="StartTime"]').val();
        var endTime = $('input[name="EndTime"]').val();
        var arrearageStatus = $("#ArrearageStatus").prop("checked")== true?1:0;
        insTb.reload({
            where: { title: title, startTime: startTime, endTime: endTime,arrearageStatus: arrearageStatus}
            , page: {
                curr: 1 //重新从第 1 页开始
            }
        });
        AmountTotal();
    });

    // 工具条点击事件
    adminList.table.on('tool(userTable)', function (obj) {
        var data = obj.data;
        var layEvent = obj.event;
        if (layEvent === 'edit') { // 修改
            showEditModel(data);
        } else if (layEvent === 'del') { // 删除
            doDel(data.Id);
        } else if (layEvent === 'config') { // 确认收款
            config(data, true);
        } else if (layEvent === 'reject') { // 驳回收款
            config(data, false);
        } else if (layEvent === 'payment') { // 点击还款
            Addpayment(data);
        }
    });

    //显示表单弹窗
    function showEditModel(vmodel) {
        adminList.form({
            title: (vmodel ? '修改' : '添加') + '来款登记',
            type: 2,
            width: "880px",
            height: "630px",
            content: vmodel ? '@Url.Action("Edit")?Id=' + vmodel.Id : '@Url.Action("Add")?Id=0',
            end: function () {
                insTb.reload();
            }
        });
    }
    //确认/驳回收款
    function config(vmodel, through) {
         adminForm.Save({
             url: '@Url.Action("ConfigCollection")',
             data: { Id: vmodel.Id,through: through},
             callBack: function () {
                 insTb.reload();
                 AmountTotal();
            }
        })
      }
   function Addpayment(vmodel) {
        adminList.form({
            title:'添加还款',
            type: 2,
            width: "680px",
            height: "530px",
            content: '@Url.Action("AddPayment")?collgeId=' + vmodel.Id,
            end: function () {
                insTb.reload();
                AmountTotal();
            }
        });
    }

    //删除
    function doDel(Id) {
        adminList.delete('@Url.Action("Delete")', { Id: Id}, function () {
            insTb.reload();
        });
            }
    //汇总
    function AmountTotal() {
            var title = $('#txtTitle').val();
            var startTime = $('input[name="StartTime"]').val();
            var endTime = $('input[name="EndTime"]').val();
            adminForm.load({
                        url:"@Url.Action("TotalAmount")",
                        data: { title: title, startTime: startTime, endTime: endTime },
                        dataType: 'json',
                        callBack: function (result) {
                            if (result.data!= null && result.data!= undefined) {
                                $("#txtAmountTotal").text("本月收款金额："+result.data+"元");
                            }
                            else {
                                $("#txtAmountTotal").text("");
                            }
                        }
            });
            adminForm.load({
                        url:"@Url.Action("TotalAmount", "BackRecord")",
                        data: { title: title, startTime: startTime, endTime: endTime },
                        dataType: 'json',
                        callBack: function (result) {
                            if (result.data!= null && result.data!= undefined) {
                                $("#txtBackAmount").text("本月退款金额：" + result.data +"元(实际退款)");
                            }
                            else {
                                $("#txtBackAmount").text("");
                            }
                        }
                    });
    }

});
    </script>
}