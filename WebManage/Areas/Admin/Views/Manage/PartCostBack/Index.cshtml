
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-body">
            <div class="layui-form toolbar">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">子合同号或者姓名：</label>
                        <div class="layui-input-inline mr0">
                            <input id="txtTitle" class="layui-input" type="text" placeholder="子合同号或姓名" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <button id="btnSearch" class="layui-btn icon-btn"><i class="layui-icon">&#xe615;</i>搜索</button>
                    </div>
                </div>
            </div>
            <table class="layui-table" id="userTable" lay-filter="userTable"></table>
        </div>
    </div>
</div>

<!-- 表格操作列 -->
<script type="text/html" id="tableBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" data-power="Edit" lay-event="edit">退费</a>
</script>

@section css{
    <link rel="stylesheet" href="/assets/module/formSelects/formSelects-v4.css" />
    <style>
        .layui-table-cell {
            height: auto;
            line-height: 28px;
        }

        .layui-table img {
            max-width: 600px;
        }
    </style>
}
@section js{
    <!-- js部分 -->
    <script>
        layui.use(['form', 'util', 'admin', 'adminList', 'adminForm'], function () {
    var $ = layui.jquery;
    var util = layui.util;
    var admin = layui.admin;
    var form = layui.form;
    var adminList = layui.adminList;
    var adminForm = layui.adminForm;
    // 渲染表格
    var insTb = adminList.tableLayUI({
        elem: '#userTable',
        url: '@Url.Action("QueryProjectTime")',
        page: true,
        where: { childContrcNo: ''},
        cellMinWidth: 100,
        cols: [[
            { type: 'numbers' },
            { field: 'Contra_ChildNo', title: '子合同号', sort: true },
            { field: 'SubjectName', title: '类别', sort: true },
            { field: 'ProjectName', title: '科目', sort: true },
            { field: 'Course_Time', title: '已充课时', sort: true },
            {
                field: 'UnitName', title: '已上课时', sort: true, templet: function (d) {
                    return d.Course_UseTime;
                }
            },
            {
                field: 'Score', title: '可退课时', sort: true, width: 120, templet: function (d) {
                    var backCourStr = "<select lay-filter='BackCourseTime' name='BackCourseTime'>";
                    for (var j = 0; j <= (d.Course_Time - d.Course_UseTime); j++) {
                        if (j == (d.Course_Time - d.Course_UseTime) || (d.Course_Time - d.Course_UseTime - j > 0 && d.Course_Time - d.Course_UseTime - j<1)) {
                            var lastNb = j;
                            if (d.Course_Time - d.Course_UseTime - j > 0 && d.Course_Time - d.Course_UseTime - j < 1) {
                                lastNb = (d.Course_Time - d.Course_UseTime);
                            }
                            backCourStr += "<option value=" + lastNb + " selected>" + lastNb + "</option>";
                        }
                        else {
                            backCourStr += "<option value=" + j + ">" + j + "</option>";
                        }
                    }
                    backCourStr += "</select>";
                    return backCourStr;
                }
            },
            {
                field: 'Score', title: '退课金额', sort: true, width: 120, templet: function (d) {
                    return "<input type='number' value='" + ((d.Course_Time - d.Course_UseTime) * d.UnitPrice) + "' unitPrice='" + d.UnitPrice+"'  name='BackAmount'  style='width:80px'/>";
                }
            },
            { align: 'center', toolbar: '#tableBar', title: '操作', width: 200 }
        ]],
        done: function (res, curr, count) {
            $(".layui-table-body,.layui-table-box,.layui-table-cell").css("overflow", 'visible');
            form.render("select");//刷新表单
        }
    });
    // 搜索
    $('#btnSearch').click(function () {
        var title = $('#txtTitle').val();
        insTb.reload({
            where: { childContrcNo:title}
            , page: {
                curr: 1 //重新从第 1 页开始
            }
        });
    });
    form.on('select(BackCourseTime)', function (data) {
        var td = $(this).parents("tr").find("td");
        var unitPrice = td.find("input[name='BackAmount']").attr("unitPrice");
        var courseTime = data.value;
        td.find("input[name='BackAmount']").val((unitPrice * courseTime));
    });

    // 工具条点击事件
     adminList.table.on('tool(userTable)', function (obj) {
         console.log(obj);
                var tr = obj.tr;
                var data = obj.data;
                var layEvent = obj.event;
         if (layEvent === 'edit') { // 修改
             var backCourseTime = $(tr).find("select[name='BackCourseTime']").val();
             var backAmount = $(tr).find("input[name='BackAmount']").val();
             if (data.Course_Time - data.Course_UseTime < backCourseTime) {
                 layer.msg("可退课时已超过限额");
                 return false;
             }
             SaveEditModel({
                 Id: data.Id, Contra_ChildNo: data.Contra_ChildNo, SubjectId: data.SubjectId, ClassId: data.ClassId, ProjectId: data.ProjectId,
                 StudentUid:data.StudentUid,BackCourseTime: backCourseTime, BackAmount: backAmount
             });
        }
     });
    //单行保存
        function SaveEditModel(vmodel) {
            adminForm.Save({
                url:'@Url.Action("BackPartCostByTimeId")',
                data: vmodel,
                callBack: function () {
                    insTb.reload({
                        where: { childContrcNo:vmodel.Contra_ChildNo}
                        , page: {
                            curr: 1 //重新从第 1 页开始
                        }
                    });
                }
            })
    }
   });
    </script>
}