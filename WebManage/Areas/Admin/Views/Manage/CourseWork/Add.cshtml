                    $("#ClassPart").css("display", "none");
                    $("#OneOfPart").css("display", "none");
                    $("#teacherPart").css("display", "none");
                    $("#PartProject").show();
                    $("#ListeningPart").show();
                    $("#ListenSubPart").show();
                    $("#spanMockTitle").text("模考标题");
                    $("#lineSpanDate").text("模考日期");
                    $("#lineSpanTimeRange").text("模考时段");
                    $("#spanStudentName").text("模考学员");
                    $("#spanCatogalogName").text("模考分类");
                    $("#mockPart").show();
                    $("#PartUnit").show();
                }
                else if (data.value == 6) {
                    $("#ClassPart").css("display", "none");
                    $("#OneOfPart").css("display", "none");
                    $("#teacherPart").css("display", "none");
                    $("#PartProject").show();
                    $("#ListeningPart").show();
                    $("#ListenSubPart").show();
                    $("#spanMockTitle").text("实考标题");
                    $("#lineSpanDate").text("实考日期");
                    $("#lineSpanTimeRange").text("实考时段");
                    $("#spanStudentName").text("实考学员");
                    $("#spanCatogalogName").text("实考分类");
                    $("#mockPart").show();
                    $("#PartUnit").show();
                }
            });
            form.on('select(ListenSubject)', function (data) {
