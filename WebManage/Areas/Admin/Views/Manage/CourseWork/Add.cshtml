@{
    var KeyId = ViewBag.ID;
}

<form id="modelUserForm" lay-filter="modelUserForm" class="layui-form model-form">
    <input name="Id" type="hidden" value="@ViewBag.ID" />
    <input name="Contra_ChildNo" type="hidden" />
    <div class="layui-form-item" id="teacherPart">
        <div class="layui-inline">
            <label class="layui-form-label">上课教师</label>
            <div class="layui-input-block">
                <select name="TeacherUid"></select>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">上课模式</label>
            <div class="layui-input-block">
                <select name="StudyMode" lay-filter="StudyMode">
                    <option value="1">一对一</option>
                    <option value="2">小班</option>
                    <option value="3">休息</option>
                    <option value="4">试听</option>
                    <option value="5">模考</option>
                    <option value="6">实考</option>
                </select>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" id="lineSpanDate">上课日期</label>
        <div class="layui-input-block">
            <div id="courseDates"></div>
            <input type="text" name="AT_Date" class="layui-input" id="AT_Date" multiple="multiple" value="@ViewBag.DataStr" style="display:none" />
        </div>
        <div id="date_all"></div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label" id="lineSpanTimeRange">上课时段</label>
            <div class="layui-input-block">
                <select name="RangTimeId" lay-filter="RangTimeId"></select>
            </div>
        </div>
    </div>
    <div class="layui-form-item" style="display:none" id="customizedRange">
        <div class="layui-inline">
            <label class="layui-form-label">开始时间</label>
            <div class="layui-input-inline">
                <input type="text" name="StartTime" id="StartTime" class="layui-input" />
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">截止时间</label>
            <div class="layui-input-inline">
                <input type="text" name="EndTime" id="EndTime" class="layui-input" />
            </div>
        </div>
    </div>
    <div class="layui-form-item" id="OneOfPart">
        <label class="layui-form-label">一对一学员</label>
        <div class="layui-input-block" style="position:relative">
            <input type="hidden" name="SubjectId" />
            <input type="hidden" name="StudentUid" />
            <input type="hidden" name="UserProjectId" />
            <input name="WorkUserName" class="layui-input" type="text" />
            <div id="searcUser" class="searcUser">
                <table style="width:100%;margin-top: 0px;" class="layui-table">
                    <tbody id="searcUserbody"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="layui-form-item" id="ClassPart" style="display:none">
        <label class="layui-form-label">小班</label>
        <div class="layui-input-block" style="position:relative">
            <input name="WorkClassName" class="layui-input" type="text" />
            <input type="hidden" name="ClasssId" />
            <div id="searcClass" class="searcClass">
                <table style="width:100%;margin-top: 0px;" class="layui-table">
                    <tbody id="searcClassbody"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="layui-form-item" style="display:none" id="mockPart">
        <label class="layui-form-label" id="spanMockTitle">模考标题</label>
        <div class="layui-input-block">
            <input type="text" name="mockTitle" id="mockTitle" class="layui-input" />
        </div>
    </div>
    <div class="layui-form-item" id="ListeningPart" style="display:none">
        <label class="layui-form-label" id="spanStudentName">试听学员</label>
        <div class="layui-input-block" style="position:relative">
            <input name="ListeningName" class="layui-input" type="text" />
            <div id="searcListen" class="searcListen">
                <table style="width:100%;margin-top: 0px;" class="layui-table">
                    <tbody id="searchListenbody"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="layui-form-item" id="ListenSubPart" style="display:none">
        <label class="layui-form-label" id="spanCatogalogName">试听分类</label>
        <div class="layui-input-block" style="position:relative">
            <select name="ListenSubject" lay-filter="ListenSubject"></select>
        </div>
    </div>
    <div class="layui-form-item" id="PartProject" style="display:none">
        <label class="layui-form-label">科目</label>
        <div class="layui-input-block">
            <select name="ProjectId" lay-filter="ProjectId"></select>
        </div>
    </div>
    <div class="layui-form-item" id="PartUnit" style="display:none">
        <label class="layui-form-label">科目单元</label>
        <div class="layui-input-block">
            <select name="UnitId"></select>
        </div>
    </div>
    <div class="layui-form-item" id="PartTa">
        <label class="layui-form-label">督学</label>
        <div class="layui-input-block">
            <select name="TA_Uid"></select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">房间</label>
        <div class="layui-input-block">
            <select name="RoomId"></select>
        </div>
    </div>
    <div class="layui-form-item positionbottomtop"></div>
    <div class="layui-form-item text-right positionbottom">
        @if (@ViewBag.ID != 0)
        {
            <button class="layui-btn layui-icon-delete" type="button" id="couseMovel">删除课程</button>
        }
        <button class="layui-btn layui-btn-primary" type="button" ew-event="closeDialog">取消</button>
        <button class="layui-btn" lay-filter="modelUserSubmit" lay-submit>保存</button>
    </div>
</form>

