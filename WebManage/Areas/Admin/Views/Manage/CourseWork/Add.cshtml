                    $("#lineSpanTimeRange").text("上课时段");
                    $("#spanStudentName").text("试听学员");
                    $("#spanCatogalogName").text("试听分类");
                    $("#mockPart").css("display", "none");
                    $("#PartUnit").css("display", "none");
                }
