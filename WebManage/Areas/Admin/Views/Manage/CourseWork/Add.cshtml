    <script>
        var currtTime = '@ViewBag.DataStr';
        layui.use(['form', 'admin', 'adminForm', 'laydate'], function () {
        var KeyId = '@KeyId';
        var $ = layui.jquery;
        var form = layui.form;
        var admin = layui.admin;
        var adminForm = layui.adminForm;
        var laydate = layui.laydate;
            var timeList = [];
            if (currtTime != null && currtTime != "") {
                timeList.push({ name:currtTime,value:currtTime,selected: true })
            }
            var courseDates = xmSelect.render({
                el: '#courseDates',
                content: '<div id="laydate" />',
                height: 'auto',
                autoRow: true,
                data: timeList,
                on: function (data) {
                    if (!data.isAdd) {
                        dateSelect(courseDates.getValue('value'));
                    }
                }
        });
        laydate.render({
                elem: '#laydate',
                position: 'static',
                theme: 'molv',      // 墨绿主题
                showBottom: false,  // 不显示底部按钮
                calendar: true,     // 开启公历节日
                format: 'yyyy-MM-dd',
                min: minDate(),      // 设置最小可选的日期
                change: function () {
                    dateSelect(courseDates.getValue('value'));
                },
                done: function (value) {
                    var values = courseDates.getValue('value');
                    var index = values.findIndex(function (val) {
                        return val === value
                    });

                    if (index != -1) {
                        values.splice(index, 1);
                    } else {
                        values.push(value);
                    }

                    dateSelect(values);

                    courseDates.update({
                        data: values.map(function (val) {
                            return {
                                name: val,
                                value: val,
                                selected: true,
                            }
                        })
                    })
                },
                ready: removeAll,
        });
        laydate.render({
            elem: '#AT_Date',
            type: 'date'
        });
        laydate.render({
            elem: '#StartTime',
            type: 'time',
            format: 'HH:mm',
            ready:formatMinutin
        });
        laydate.render({
            elem: '#EndTime',
            type: 'time',
            format: 'HH:mm',
            ready: formatMinutin
        });
        function removeAll() {
            document.querySelectorAll('#laydate td[lay-ymd].layui-this').forEach(function (dom) {
                dom.classList.remove('layui-this');
            });
        }

        function dateSelect(values) {
            removeAll();
            values.forEach(function (val) {
                var dom = document.querySelector('#laydate td[lay-ymd="' + val.replace(/-0([1-9])/g, '-$1') + '"]');
                dom && dom.classList.add('layui-this');
            });
          }
        // 设置最小可选的日期
        function minDate() {
            var now = new Date();
            return now.getFullYear() + "-" + (now.getMonth() + 1) + "-" + now.getDate();
        }

        var App = {
            Load: function () {
                adminForm.load({
                    formName: 'modelUserForm',
                    KeyId: '@KeyId',
                    url: "@Url.Action("Find")",
                    dataType: 'json',
                    callBack: function (r) {
                        if (r != null && r.Id > 0) {
                            $("#courseDates").css("display", "none");
                            $("#AT_Date").show();
                        }
                        else {
                            $("#courseDates").show();
                            $("#AT_Date").css("display", "none");
                        }
                        if (r.StudyMode == 1) {
                            $("input[name='WorkUserName']").val(r.Work_Title);
                            $("input[name='UserProjectId']").val(r.ProjectId);
                            $("#PartProject").css("display", "none");
                        }
                        else if (r.StudyMode == 2) {
                            $("#PartProject").css("display", "block");
                            $("input[name='WorkClassName']").val(r.Work_Title);
                            $("#OneOfPart").css("display", "none");
                            $("#ClassPart").css("display", "block");
                            bindProject(r.SubjectId, r.ProjectId,null);
                        }
                        else if (r.StudyMode == 3) {
                            $("#PartTa").css("display", "none");
                            $("#PartProject").css("display", "none");
                            $("#ClassPart").css("display", "none");
                            $("#OneOfPart").css("display", "none");
                            $("#lineSpanDate").text("休息日期");
                            $("#lineSpanTimeRange").text("休息时段");
                        }
                        else if (r.StudyMode == 4) {
                            $("#ClassPart").css("display", "none");
                            $("#OneOfPart").css("display", "none");
                            $("#PartProject").show();
                            $("#ListeningPart").show();
                            $("#ListenSubPart").show();
                            $("#lineSpanDate").text("试听日期");
                            $("#lineSpanTimeRange").text("上课时段");
                            $("#spanStudentName").text("试听学员");
                            $("#spanCatogalogName").text("试听分类");
                        }
                        else if (r.StudyMode == 5) {
                            $("input[name='mockTitle']").val(r.Work_Title);
                            $("#ClassPart").css("display", "none");
                            $("#OneOfPart").css("display", "none");
                            $("#teacherPart").css("display", "none");
                            $("#PartProject").show();
                            $("#ListeningPart").show();
                            $("#ListenSubPart").show();
                            $("#spanMockTitle").text("模考标题");
                            $("#lineSpanDate").text("模考日期");
                            $("#lineSpanTimeRange").text("模考时段");
                            $("#spanStudentName").text("模考学员");
                            $("#spanCatogalogName").text("模考分类");
                            $("#mockPart").show();
                        }
                        else if (r.StudyMode == 6) {
                            $("input[name='mockTitle']").val(r.Work_Title);
                            $("#ClassPart").css("display", "none");
                            $("#OneOfPart").css("display", "none");
                            $("#teacherPart").css("display", "none");
                            $("#PartProject").show();
                            $("#ListeningPart").show();
                            $("#ListenSubPart").show();
                            $("#spanMockTitle").text("实考标题");
                            $("#lineSpanDate").text("实考日期");
                            $("#lineSpanTimeRange").text("实考时段");
                            $("#spanStudentName").text("实考学员");
                            $("#spanCatogalogName").text("实考分类");
                            $("#mockPart").show();
                        }
                        if (r != null && r.AT_Date != undefined) {
                            $("input[name='AT_Date']").val(dateFtt("yyyy-MM-dd", r.AT_Date));
                        }
                        if (r != null && r.RangTimeId < 1) {
                            $("#customizedRange").css("display", "block");
                        }
                        //绑定教师
                        adminForm.load({
                        url: "@Url.Action("QueryTeacher")",
                        dataType: 'json',
                        callBack: function (rou) {
                            if (rou.data != null) {
                                var result = rou.data;
                                var teacherId ='@ViewBag.teacherId';
                                for (var i = 0; i < result.length; i++) {
                                    if (r != undefined && r.TeacherUid != null && r.TeacherUid == result[i].User_ID) {
                                        $("select[name='TeacherUid']").append('<option value = ' + result[i].User_ID + ' selected>' + result[i].User_Name +'</option>');

                                    } else {
                                        if (teacherId!= "" &&teacherId== result[i].User_ID) {
                                            $("select[name='TeacherUid']").append('<option value = ' + result[i].User_ID + ' selected>' + result[i].User_Name + '</option>');
                                        }
                                        else {
                                            $("select[name='TeacherUid']").append('<option value = ' + result[i].User_ID + '>' + result[i].User_Name + '</option>');
                                        }
                                    }
                                }
                            }
                        }
                        });
                        //绑定时间范围
                        adminForm.load({
                        url: "@Url.Action("QueryRangeTime")",
                        dataType: 'json',
                        callBack: function (rou) {
                            if (rou.data != null) {
                                var result = rou.data;
                                for (var i = 0; i < result.length; i++) {
                                    if (r != undefined && r.RangTimeId != null && r.RangTimeId == result[i].Id) {
                                        $("select[name='RangTimeId']").append('<option value = ' + result[i].Id + ' selected>' + result[i].TimeName +'</option>');

                                    } else {
                                        $("select[name='RangTimeId']").append('<option value = ' + result[i].Id + '>' + result[i].TimeName + '</option>');
                                    }
                                }
                            }
                        }
                        });
                        //绑定督学
                        adminForm.load({
                        url: "@Url.Action("QueryTa")",
                        dataType: 'json',
                        callBack: function (rou) {
                            if (rou.data != null) {
                                var result = rou.data;
                                for (var i = 0; i < result.length; i++) {
                                    if (r != undefined && r.TA_Uid != null && r.TA_Uid == result[i].User_ID) {
                                        $("select[name='TA_Uid']").append('<option value = ' + result[i].User_ID + ' selected>' + result[i].User_Name +'</option>');

                                    } else {
                                        $("select[name='TA_Uid']").append('<option value = ' + result[i].User_ID + '>' + result[i].User_Name + '</option>');
                                    }
                                }
                            }
                        }
                        });
                        //绑定教室
                        adminForm.load({
                        url: "@Url.Action("QueryRoom")",
                        dataType: 'json',
                        callBack: function (rou) {
                            if (rou.data != null) {
                                var result = rou.data;
                                for (var i = 0; i < result.length; i++) {
                                    if (r != undefined && r.RoomId != null && r.RoomId == result[i].Id) {
                                        $("select[name='RoomId']").append('<option value = ' + result[i].Id + ' selected>' + result[i].RoomName +'</option>');

                                    } else {
                                        $("select[name='RoomId']").append('<option value = ' + result[i].Id + '>' + result[i].RoomName + '</option>');
                                    }
                                }
                            }
                        }
                        });
                        //绑定试听分类
                        adminForm.load({
                        url: "@Url.Action("QuerySubject","ContracUser")",
                        dataType: 'json',
                        callBack: function (rou) {
                                if (rou.data != null) {
                                    var result = rou.data;
                                    $("select[name='ListenSubject']").html("<option value='0'>-分类-</option>");
                                    for (var i = 0; i < result.length; i++) {
                                        if (r.SubjectId== result[i].SubjectId) {
                                            $("select[name='ListenSubject']").append('<option value = ' + result[i].SubjectId + ' selected>' + result[i].SubjectName + '</option>');
                                            bindProject(r.SubjectId, r.ProjectId, r.UnitId);
                                        }
                                        else {
                                            $("select[name='ListenSubject']").append('<option value = ' + result[i].SubjectId + '>' + result[i].SubjectName + '</option>');
                                        }
                                    }
                            }
                            }
                        });
                    }
                });
            },
            Save: function (data) {
                var selectArr = courseDates.getValue('value');    // 获取value字符串值
                data.field.WorkDateGroup = selectArr;
                data.field.ProjectId = data.field.StudyMode == 1 ? $("input[name='UserProjectId']").val() : $("select[name='ProjectId']").val();
                if (data.field.StudyMode == 1)
                    data.field.Work_Title = $("input[name='WorkUserName']").val();
                else if (data.field.StudyMode ==2) {
                    data.field.Work_Title = $("input[name='WorkClassName']").val();
                }
                else if (data.field.StudyMode == 4) {
                    if (data.field.ProjectId == null || data.field.ProjectId == "") {
                        layer.msg("试听科目不能为空");
                        return false;
                    }
                }
                else if (data.field.StudyMode == 5) {
                    data.field.Work_Title = $("input[name='mockTitle']").val();
                    if (data.field.Work_Title== "") {
                        layer.msg("模考标题不能为空");
                        return false;
                    }
                    if (data.field.ListeningName == "") {
                        layer.msg("模考学员不能为空");
                        return false;
                        }
                    if (data.field.ProjectId == null || data.field.ProjectId=="") {
                        layer.msg("模考科目不能为空");
                        return false;
                    }
                }
                else if (data.field.StudyMode == 6) {
                    data.field.Work_Title = $("input[name='mockTitle']").val();
                    if (data.field.Work_Title == "") {
                        layer.msg("实考标题不能为空");
                        return false;
                    }
                    if (data.field.ListeningName == "") {
                        layer.msg("实考学员不能为空");
                        return false;
                    }
                    if (data.field.ProjectId == null || data.field.ProjectId == "") {
                        layer.msg("实考科目不能为空");
                        return false;
                    }
                }
                adminForm.Save({
                    url: KeyId ? '@Url.Action("SaveCourseWork")' : '@Url.Action("SaveCourseWork")',
                    data: data.field,
                    callBack: function () {
                        admin.closeThisDialog();
                    }
                })
            }
        }
            App.Load();
            form.on('select(RangTimeId)', function (data) {
                console.log(data.value);
                if (data.value==0)
                    $("#customizedRange").css("display", "block");
                else {
                    $("#customizedRange").css("display", "none");
                }
