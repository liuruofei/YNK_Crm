@model C_Contrac_User
@{
    var KeyId = ViewBag.ID;
}

<form id="modelUserForm" lay-filter="modelUserForm" class="layui-form model-form">
    <input name="Id" type="hidden" value="@ViewBag.ID" />
    <input name="StudentUid" type="hidden" value="@ViewBag.StudentUid" />
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">推送对象</label>
            <div class="layui-input-block" style="line-height:37px;">
                @{ if (!string.IsNullOrEmpty(Model.OpenId))
                    {
                        <input type="checkbox" lay-skin="primary" name="openIdsArr" valName="@Model.Student_Name" value="@Model.OpenId" title="@Model.Student_Name" />
                    }
                    if (!string.IsNullOrEmpty(Model.Elder_OpenId))
                    {
                        <input type="checkbox" lay-skin="primary" name="openIdsArr" valName="@Model.Elder_Name" value="@Model.Elder_OpenId" title="@Model.Elder_Name" />
                    }
                    if (!string.IsNullOrEmpty(Model.Elder2_OpenId))
                    {
                        <input type="checkbox" lay-skin="primary" name="openIdsArr" valName="@Model.Elder2_Name" value="@Model.Elder2_OpenId" title="@Model.Elder2_Name" />
                    }
                    if (string.IsNullOrEmpty(Model.OpenId) && string.IsNullOrEmpty(Model.Elder_OpenId) && string.IsNullOrEmpty(Model.Elder2_OpenId))
                    {
                        <span>未发现绑定用户</span>
                    }
                }
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">沟通重点</label>
        <div class="layui-input-block">
            <input name="SummaryTitle" id="SummaryTitle" type="text" class="layui-input" autocomplete="off"/>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">沟通日期</label>
        <div class="layui-input-block">
            <input name="CommunicationTime" id="CommunicationTime" type="text" class="layui-input" autocomplete="off" />
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">沟通内容</label>
        <div class="layui-input-block">
            <textarea name="Summary" style="width:100%;height:420px;"></textarea>
        </div>
    </div>
    <div class="layui-form-item positionbottomtop"></div>
    <div class="layui-form-item text-right positionbottom">
        <button class="layui-btn layui-btn-primary" type="button" ew-event="closeDialog">取消</button>
        <button class="layui-btn" lay-filter="modelUserSubmit" lay-submit>保存</button>
        <button class="layui-btn"  id="btnSend" type="button">发送沟通内容</button>
    </div>
</form>

@section css{
    <style>
    </style>
}

@section js{
    <!-- js部分 -->
    <link href="~/kindeditor/themes/default/default.css" rel="stylesheet" />
    <script>
        layui.use(['form', 'admin', 'adminForm', 'laydate'], function () {
        var KeyId = '@KeyId';
        var $ = layui.jquery;
        var form = layui.form;
        var admin = layui.admin;
        var adminForm = layui.adminForm;
        var laydate = layui.laydate;
        //日期
        laydate.render({
            elem: '#CommunicationTime',
            format: 'yyyy-MM-dd'
        });
        var App = {
            Load: function () {
                    adminForm.load({
                        formName: 'modelUserForm',
                        KeyId: '@KeyId',
                        url: "@Url.Action("Find")",
                        dataType: 'json',
                        callBack: function (r) {
                            if (r.UserNames != null && r.UserNames != '') {
                                var openIds = r.openIds.split(",");
                                console.log(openIds);
                                openIds.forEach(item => {
                                    $("input[name='openIdsArr'][value=" + item + "]").prop("checked", "checked");;
                                });
                                form.render("select");
                            }
                            if (r.CommunicationTime != null) {
                                $("#CommunicationTime").val(dateFtt("yyyy-MM-dd", r.CommunicationTime.replace(/-/g, "/")));
                            }

                    }
                });
            },
            Save: function (data) {
                data.field.openIds = [];
                data.field.UserNames = [];
                var checkGroups = $("input[name='openIdsArr']:checked");
                if (checkGroups != null && checkGroups != undefined) {
                    for (var i = 0; i < checkGroups.length; i++) {
                        data.field.openIds.push($(checkGroups[i]).val());
                        data.field.UserNames.push($(checkGroups[i]).attr("valName"));
                    }
                }
                adminForm.Save({
                    url:'@Url.Action("SaveCommunication")',
                    data: data.field,
                    callBack: function (result) {
                        $("input[name='Id']").val(result.data);
                    }
                })
            }
        }

        App.Load();
        // 表单提交事件
        form.on('submit(modelUserSubmit)', function (data) {
            App.Save(data);
            return false;
        });
         $("#btnSend").click(function () {  
            adminForm.Save({
                url: '@Url.Action("SendCommunication")',
                data: {Id:$("input[name='Id']").val()},
                    callBack: function () {
                        admin.closeThisDialog();
                    }
                })
        });
     });
        function dateFtt(fmt, val) { //author: meizz
            var date = new Date(val);
            var o = {
                "M+": date.getMonth() + 1,     //月份
                "d+": date.getDate(),     //日
                "h+": date.getHours(),     //小时
                "m+": date.getMinutes(),     //分
                "s+": date.getSeconds(),     //秒
                "q+": Math.floor((date.getMonth() + 3) / 3), //季度
                "S": date.getMilliseconds()    //毫秒
            };
            if (/(y+)/.test(fmt))
                fmt = fmt.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
            for (var k in o)
                if (new RegExp("(" + k + ")").test(fmt))
                    fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
            return fmt;
        }
    </script>
}