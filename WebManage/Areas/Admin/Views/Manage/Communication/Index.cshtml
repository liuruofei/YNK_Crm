
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-body">
            <div class="layui-form toolbar">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">关键字：</label>
                        <div class="layui-input-inline mr0">
                            <input id="txtTitle" class="layui-input" type="text" placeholder="输入标题" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">沟通日期：</label>
                        <div class="layui-input-inline mr0">
                            <input id="startTime" class="layui-input" type="text" placeholder="开始时间" autocomplete="off" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">- </label>
                        <div class="layui-input-inline mr0">
                            <input id="endTime" class="layui-input" type="text" placeholder="结束时间" autocomplete="off" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <button id="btnSearch" class="layui-btn icon-btn"><i class="layui-icon">&#xe615;</i>搜索</button>
                        <button id="btnAdd" class="layui-btn icon-btn"><i class="layui-icon">&#xe654;</i>新增沟通</button>
                        <button class="layui-btn" type="button" onclick="exportPlan()" style="margin-left:5px">导出</button>
                    </div>
                </div>
            </div>
            <input type="hidden" name="StudentUid" value="@ViewBag.studentUid" id="StudentUid" />
            <table class="layui-table" id="userTable" lay-filter="userTable"></table>
        </div>
    </div>
</div>

<!-- 表格操作列 -->
<script type="text/html" id="tableBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs"  lay-event="edit">修改</a>
</script>

@section css{
    <link rel="stylesheet" href="/assets/module/formSelects/formSelects-v4.css" />
    <style>
        .layui-table-cell {
            height: auto;
            line-height: 28px;
        }

        .layui-table img {
            max-width: 600px;
        }
    </style>
}
@section js{
    <!-- js部分 -->
    <script>
        layui.use(['form', 'util', 'admin', 'adminList', 'adminForm', 'laydate'], function () {
    var $ = layui.jquery;
    var util = layui.util;
    var admin = layui.admin;
    var form = layui.form;
    var adminList = layui.adminList;
    var adminForm = layui.adminForm;
    var laydate = layui.laydate;
    //日期
    laydate.render({
        elem: '#startTime',
        format: 'yyyy-MM-dd'
    });
    laydate.render({
        elem: '#endTime',
        format: 'yyyy-MM-dd'
    });
    // 渲染表格
    var insTb = adminList.tableLayUI({
        elem: '#userTable',
        url: '@Url.Action("GetDataSource")',
        page: true,
        where:{title: $("#txtTitle").val(), studentUid: $('#StudentUid').val() },
        cellMinWidth: 100,
        cols: [[
            { type: 'numbers' },
            { field: 'UserNames', title: '沟通对象' },
            { field: 'SummaryTitle', title: '沟通重点'},
            {
                field: 'CommunicationTime', title: '沟通日期', sort: true, templet: function (d) {
                    return dateFtt("yyyy-MM-dd", d.CommunicationTime.replace(/-/g,'/'));
                }
            },
            {
                field: 'Summary', title: '沟通内容',width:150
            },
            {
                field: 'SendTime', title: '发送时间', sort: true, templet: function (d) {
                    if (d.SendTime != null)
                        return dateFtt("yyyy-MM-dd hh:mm", d.SendTime.replace(/-/g, '/'));
                    else
                        return"";
                }
            },
            {
                field: 'IsSend', title: '是否已发送', sort: true, templet: function (d) {
                    return d.IsSend > 0 ? "已发送" : "待发送";
                }
            },
            { align: 'center', toolbar: '#tableBar', fixed: 'right', title: '操作', width: 100 }
        ]]
    });



    // 搜索
    $('#btnSearch').click(function () {
        var title = $('#txtTitle').val();
        var startTime = $('#startTime').val();
        var endTime = $('#endTime').val();
        insTb.reload({
            where: { studentUid: $('#StudentUid').val(), title: title, startTime: startTime, endTime: endTime }
            , page: {
                curr: 1 //重新从第 1 页开始
            }
        });
    });
    //添加沟通内容
    $("#btnAdd").click(function () {
        showEditModel();
    })

    // 工具条点击事件
   adminList.table.on('tool(userTable)', function (obj) {
       var data = obj.data;
       var layEvent = obj.event;
       if (layEvent === 'edit') { // 修改
           showEditModel(data);
       }
   });
    //显示表单弹窗
    function showEditModel(vmodel) {
        var cmid = vmodel == null ? 0 : vmodel.Id;
        adminList.form({
            title: (vmodel ? '修改' : '添加') + '沟通纪要',
            type: 2,
            width: "1060px",
            height: "730px",
            content: '@Url.Action("Add")?studentUid=' + $('#StudentUid').val()+ '&Id=' + cmid,
            end: function () {
                insTb.reload();
            }
        });
    }
});
     function exportPlan() {
         var studentUid = $("input[name='StudentUid']").val();
         var title = $('#txtTitle').val();
         var startTime = $('#startTime').val();
         var endTime = $('#endTime').val();
         window.location.href = '@Url.Action("ExportPlan")?studentUid=' + studentUid + '&startTime=' + startTime + '&endTime=' + endTime + '&title=' + title;
     }
     function dateFtt(fmt, val) { //author: meizz
            var date = new Date(val);
            var o = {
                "M+": date.getMonth() + 1,     //月份
                "d+": date.getDate(),     //日
                "h+": date.getHours(),     //小时
                "m+": date.getMinutes(),     //分
                "s+": date.getSeconds(),     //秒
                "q+": Math.floor((date.getMonth() + 3) / 3), //季度
                "S": date.getMilliseconds()    //毫秒
            };
            if (/(y+)/.test(fmt))
                fmt = fmt.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
            for (var k in o)
                if (new RegExp("(" + k + ")").test(fmt))
                    fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
            return fmt;
        }
    </script>
}